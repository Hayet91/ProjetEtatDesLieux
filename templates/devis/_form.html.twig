{{ form_start(form) }}
<div class="row pt-5 devis-form-position">
    <div class=" form-group col-md-12 mb-3">
        
    {{ form_widget(form.typesUtilisateurs, {'attr': {'class': 'form-select border-primary'}}) }}
         
</div>
   
    <div class="form-group col-md-6  mb-3">
        {{ form_widget(form.typeDeBien, {'attr': {'class': 'form-select border-primary'}}) }}
    </div>
    <div class="form-group col-md-6 mb-3">
        {{ form_widget(form.bienMeuble, {'attr': {'class': 'form-select border-primary'}}) }}
    </div>
    <div class="form-group col-md-6 mb-3">
       
        {{ form_widget(form.codePostal, {'attr': {'class': 'form-control border-primary'}}) }}
    </div>
    <div class="form-group col-md-6 mb-3">
       
        {{ form_widget(form.ville, {'attr': {'class': 'form-control border-primary'}}) }}
    </div>
    <div class="form-group col-md-6 mb-3">
    
    {{ form_widget(form.phone, {'attr': {'class': 'form-control border-primary'}}) }}
    </div>
    <div class="form-group col-md-6 mb-3">
    
    {{ form_widget(form.email, {'attr': {'class': 'form-control border-primary'}}) }}
    </div>
    <div class="form-group col-md-12 mb-3">
    {{ form_widget(form.message, {'attr': {'class': 'form-control border-primary placeholder-fixed', 'style': 'height: 200px;'}}) }}

    </div>
    <div class="form-group col-md-12 mt-3">
        <button class="btn btn-primary btn-lg" style="border-radius: 30px";>{{ button_label|default('Envoyer le message') }}</button>
    </div>
</div>
{{ form_end(form) }}
