{% extends 'base-backend.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypesUtilisateurs</th>
                <th>TypeDeBien</th>
                <th>BienMeuble</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Message</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.typesUtilisateurs }}</td>
                <td>{{ devi.typeDeBien }}</td>
                <td>{{ devi.bienMeuble ? 'Yes' : 'No' }}</td>
                <td>{{ devi.codePostal }}</td>
                <td>{{ devi.ville }}</td>
                <td>{{ devi.phone }}</td>
                <td>{{ devi.email }}</td>
                <td>{{ devi.message }}</td>
                <td>{{ devi.updatedAt ? devi.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('app_admin_devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_devis_new') }}">Create new</a>
{% endblock %}
